<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/user_options_layout"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp">

    <ImageView
        android:id="@+id/user_option_img"
        android:layout_width="82dp"
        android:layout_height="73dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/new_food" />

    <TextView
        android:id="@+id/user_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Notificações"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/user_option_img"
        app:layout_constraintTop_toTopOf="@+id/user_option_img" />

    <TextView
        android:id="@+id/user_option_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Minha central de notificações"
        app:layout_constraintBottom_toBottomOf="@+id/user_option_img"
        app:layout_constraintStart_toStartOf="@+id/user_option_title"
        app:layout_constraintTop_toBottomOf="@+id/user_option_title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="33dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toEndOf="@+id/user_option_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@mipmap/right_icon_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>